<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/task_item"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:paddingTop="@dimen/list_item"
    android:paddingBottom="@dimen/list_item"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin">

    <CheckBox
        android:id="@+id/check_task_completed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_toRightOf="@+id/check_task_completed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="4dp">

        <TextView
            android:id="@+id/text_task_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Task"
            style="@style/Base.TextAppearance.AppCompat.Body2"/>

        <TextView
            android:id="@+id/text_task_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Task"
            android:paddingTop="4dp"
            style="@style/Base.TextAppearance.AppCompat.Body1"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/image_task_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:src="@drawable/ic_more"/>

</RelativeLayout>